{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "build:styles", "build:components"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["RESEND_API_KEY", "PROVIDER_EMAIL", "RECIPIENT_EMAIL"]
    },
    "build:styles": {
      "outputs": ["dist/**"]
    },
    "build:components": {
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "with": ["dev", "dev:styles", "dev:components"],
      "cache": false,
      "persistent": true
    },
    "dev:styles": {
      "cache": false,
      "persistent": true
    },
    "dev:components": {
      "cache": false,
      "persistent": true
    }
  }
}
